<% layout('layout', { pageTitle: 'Error' }) -%>

<%- include('partials/main-header', { page: 'error', viewer, csrfToken }) %>

<div class="max-w-4xl mx-auto px-4 pt-40 pb-12 text-center">
  <h1 class="serif text-4xl font-bold mb-4">Something went wrong</h1>
  <p class="text-lg opacity-80 mb-8">
    We apologize for the inconvenience. Please try again later or navigate back to the homepage.
  </p>
  
  <% if (typeof error !== 'undefined' && error) { %>
    <pre class="bg-stone-100 p-4 rounded-lg text-left text-sm text-red-700/80 overflow-auto mb-8">
      <code><%- JSON.stringify(error, null, 2) %></code>
    </pre>
  <% } %>

  <div class="text-center mt-12">
    <a href="/" class="inline-block bg-[#1E2A44] text-white px-6 py-3 rounded-full hover:bg-[#2a3b5a] transition-colors">
      Back to Home
    </a>
  </div>
</div>
