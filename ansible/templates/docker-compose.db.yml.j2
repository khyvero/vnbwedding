version: '3.8'

services:
  postgres-db:
    image: postgres:14-alpine
    container_name: vnbwedding_db
    restart: always
    environment:
      POSTGRES_DB: vnbwedding
      POSTGRES_USER: vnbwedding_user
      POSTGRES_PASSWORD: "{{ vault_db_password }}"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "5432:5432"

volumes:
  postgres_data:
