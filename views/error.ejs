<% layout('layout', { pageTitle: 'Something Went Wrong' }) -%>

<%- include('partials/main-header', { page: 'error', viewer: (typeof viewer !== 'undefined' ? viewer : null), csrfToken: (typeof csrfToken !== 'undefined' ? csrfToken : '') }) %>

<div class="max-w-2xl mx-auto px-4 pt-40 pb-12 text-center">
  <h1 class="serif text-4xl font-bold mb-4">Oops!</h1>
  <p class="text-lg leading-relaxed mb-2">
    It seems there was an error: <strong class="font-semibold"><%= (typeof error !== 'undefined' && error.message) ? error.message : 'An unexpected issue occurred' %></strong>.
  </p>
  <p class="text-lg leading-relaxed mb-8">
    If you are sure this is not a mistake, please report it to us on the email
    <a href="mailto:bishoy.veronica@gmail.com" class="underline">bishoy.veronica@gmail.com</a>.
  </p>
  <a href="/" class="inline-block bg-[#1E2A44] text-white px-6 py-3 rounded-full hover:bg-[#2a3b5a] transition-colors">
    Back to Home
  </a>
</div>
