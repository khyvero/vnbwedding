<!-- RSVP access modal -->
<div id="accessModal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4">
  <div class="absolute inset-0 bg-black/60 backdrop-blur-sm" aria-hidden="true"></div>
  <div class="relative w-full max-w-md bg-white rounded-2xl shadow-xl p-6">
    <h3 class="serif text-xl mb-4">Enter Access Code</h3>
    <form id="accessForm" method="post" action="/access" class="space-y-4">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken || '' %>">
      <input type="hidden" name="next" id="accessNext" value="<%= locals.next || '/' %>">
      <div>
        <input
          name="code"
          id="accessCodeInput"
          placeholder="e.g., Alice"
          required
          class="w-full rounded-lg border-stone-300 px-3 py-2 focus:ring-2 focus:ring-[#1E2A44]/50 focus:border-[#1E2A44]"
          autocomplete="one-time-code"
        >
        <p id="accessError" class="hidden text-red-600 text-sm mt-2"></p>
      </div>
      <div class="flex justify-end gap-2">
        <button type="button" id="closeAccess" class="px-4 py-2 border rounded-lg hover:bg-stone-100 transition-colors">Cancel</button>
        <button type="submit" class="px-4 py-2 rounded-lg bg-[#1E2A44] text-white hover:bg-[#2a3b5a] transition-colors">Continue</button>
      </div>
    </form>
  </div>
</div>